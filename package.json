{
  "name": "@jordnlvr/mendix-mcp-server",
  "version": "3.5.0",
  "description": "Self-learning MCP server for Mendix development with semantic vector search, auto-harvesting, project & theme analysis, and Beast Mode research. Now with Supabase cloud persistence!",
  "type": "module",
  "main": "src/index.js",
  "module": "src/smithery.js",
  "bin": {
    "mendix-mcp-server": "bin/cli.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "rest": "node src/rest-proxy.js",
    "dev": "npx smithery dev",
    "build": "npx smithery build",
    "test": "node --test tests/**/*.test.js",
    "harvest": "node -e \"import('./src/harvester/index.js').then(m => new m.HarvestScheduler().harvestNow())\"",
    "reindex": "node scripts/reindex-vectors.js",
    "reindex:force": "node scripts/reindex-vectors.js --force",
    "vector-status": "node -e \"import('./src/vector/VectorStore.js').then(m => new m.default().getStats().then(console.log))\"",
    "maintenance": "node -e \"import('./src/utils/MaintenanceScheduler.js').then(m => new m.default({}).runFullMaintenance())\"",
    "migrate:supabase": "node scripts/migrate-to-supabase.js",
    "legacy": "node server.js",
    "prepublishOnly": "node -e \"console.log('Publishing @jordnlvr/mendix-mcp-server v' + require('./package.json').version)\""
  },
  "keywords": [
    "mcp",
    "mendix",
    "model-context-protocol",
    "studio-pro",
    "model-sdk",
    "platform-sdk",
    "knowledge-base",
    "self-learning",
    "ai-assistant",
    "copilot",
    "claude",
    "semantic-search",
    "pinecone",
    "low-code"
  ],
  "author": "Kelly Seale <kelly.seale@siemens.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jordnlvr/mendix-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/jordnlvr/mendix-mcp-server/issues"
  },
  "homepage": "https://jordnlvr.github.io/mendix-mcp-server/",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "src/",
    "knowledge/",
    "bin/",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@pinecone-database/pinecone": "^6.1.3",
    "@supabase/supabase-js": "^2.87.1",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "node-fetch": "^3.3.2",
    "uuid": "^11.0.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@smithery/cli": "^1.6.6",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
