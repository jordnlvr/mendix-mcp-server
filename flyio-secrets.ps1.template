# Fly.io Secrets Configuration Template
# 
# INSTRUCTIONS:
# 1. Copy this file to flyio-secrets.ps1 (remove .template)
# 2. Fill in your actual API keys
# 3. Run: .\flyio-secrets.ps1
# 
# NOTE: flyio-secrets.ps1 is in .gitignore and will NOT be committed!

Write-Host "Setting Fly.io secrets..." -ForegroundColor Cyan

# Supabase Configuration
fly secrets set SUPABASE_URL="https://YOUR-PROJECT.supabase.co"
fly secrets set SUPABASE_ANON_KEY="YOUR_SUPABASE_ANON_KEY_HERE"

# Pinecone Configuration  
fly secrets set PINECONE_API_KEY="YOUR_PINECONE_API_KEY_HERE"
fly secrets set PINECONE_ENVIRONMENT="YOUR_PINECONE_ENVIRONMENT_HERE"
fly secrets set PINECONE_INDEX="mendix-knowledge"

# Azure OpenAI Configuration
fly secrets set AZURE_OPENAI_API_KEY="YOUR_AZURE_OPENAI_API_KEY_HERE"
fly secrets set AZURE_OPENAI_ENDPOINT="https://YOUR-RESOURCE.openai.azure.com/"
fly secrets set AZURE_OPENAI_DEPLOYMENT="text-embedding-ada-002"

# OpenAI Configuration (if using OpenAI instead of Azure)
fly secrets set OPENAI_API_KEY="YOUR_OPENAI_API_KEY_HERE"

# Optional: Node Environment
fly secrets set NODE_ENV="production"

Write-Host "âœ… Secrets set!" -ForegroundColor Green
Write-Host "Run 'fly deploy' to apply changes"
