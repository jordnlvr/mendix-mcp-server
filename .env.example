# Mendix Expert MCP Server - Environment Variables
# ================================================
# Copy this file to .env and fill in your values

# Pinecone API Key (for Phase 2 vector search upgrade)
# Get your free key at: https://www.pinecone.io/
# Free tier: 100K vectors, 1 index - $0 cost for single user
PINECONE_API_KEY=your-pinecone-api-key-here

# Pinecone Index Name (will be created in Phase 2)
PINECONE_INDEX=mendix-knowledge

# Pinecone Environment/Region
PINECONE_ENVIRONMENT=us-east-1

# OpenAI API Key (optional - for embeddings in Phase 2)
# If not set, will use free local embeddings
# OPENAI_API_KEY=your-openai-key-here

# Harvest Settings
HARVEST_INTERVAL_DAYS=7
HARVEST_AUTO_RUN=true

# Mendix Settings (for SDK operations)
# Get your PAT from: https://sprintr.home.mendix.com/link/profilesettings
# MENDIX_TOKEN=your-mendix-pat-here
