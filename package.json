{
  "name": "mendix-expert-mcp-server",
  "version": "2.3.1",
  "description": "Modular, scalable, self-learning MCP server for Mendix development knowledge with dynamic project analysis, auto-harvesting, and semantic vector search",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "node --test tests/**/*.test.js",
    "harvest": "node -e \"import('./src/harvester/index.js').then(m => new m.HarvestScheduler().harvestNow())\"",
    "vector-status": "node -e \"import('./src/vector/VectorStore.js').then(m => new m.default().getStats().then(console.log))\"",
    "legacy": "node server.js"
  },
  "keywords": [
    "mcp",
    "mendix",
    "studio-pro",
    "model-sdk",
    "platform-sdk",
    "knowledge-base",
    "self-learning",
    "quality-scoring"
  ],
  "author": "Kelly Seale",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@pinecone-database/pinecone": "^6.1.3",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "node-fetch": "^3.3.2",
    "uuid": "^11.0.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
